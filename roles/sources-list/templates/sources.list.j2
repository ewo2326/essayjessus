{% if ansible_distribution_major_version == '6' %}
{% set release = "squeeze" %}
{% elif ansible_distribution_major_version == '7' %}
{% set release = "wheezy" %}
{% elif ansible_distribution_major_version == '8' %}
{% set release = "jessie" %}
{% endif %}
{% if ansible_distribution_major_version == '7' or ansible_distribution_major_version == '8' %}
# {{ release }}
deb http://cdn.debian.net/debian/ {{ release }} main contrib non-free
deb-src http://cdn.debian.net/debian/ {{ release }} main contrib non-free

deb http://security.debian.org/ {{ release }}/updates main contrib non-free
deb-src http://security.debian.org/ {{ release }}/updates main contrib non-free

# {{ release }}-updates
deb http://cdn.debian.net/debian {{ release }}-updates main contrib non-free
deb-src http://cdn.debian.net/debian {{ release }}-updates main contrib non-free
{% elif ansible_distribution_major_version == '6' %}
# {{ release }}-archive
deb http://archive.debian.org/debian {{ release }} main
deb http://archive.debian.org/debian {{ release }}-lts main
{% endif %}
